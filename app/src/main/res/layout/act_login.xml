<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="@dimen/_15sdp"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_70sdp"
        android:src="@drawable/logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/outline_gray_light"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">

        <TextView
            android:id="@+id/actLoginTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:gravity="center_horizontal"
            android:lines="2"
            android:text="@string/enter_mobile_link"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <com.hbb20.CountryCodePicker
            android:id="@+id/actLoginCpp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/actLoginTxt"
            android:layout_marginEnd="-1dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/outline_gray"/>

        <EditText
            android:id="@+id/actLoginNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/actLoginCpp"
            android:layout_alignTop="@+id/actLoginCpp"
            android:layout_toEndOf="@+id/actLoginCpp"
            android:background="@drawable/outline_gray"
            android:editable="false"
            android:hint="@string/phone"
            android:inputType="phone"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:singleLine="true"
            android:textSize="@dimen/_16sdp" />

        <CheckBox
            android:id="@+id/actLoginCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/actLoginCpp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/agree_to"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/actLoginTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/actLoginCheck"
            android:layout_alignTop="@+id/actLoginCheck"
            android:layout_toEndOf="@+id/actLoginCheck"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="@dimen/_5sdp"
            android:text="@string/terms_conditions"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp" />

        <Button
            android:id="@+id/actLoginSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/actLoginCheck"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>
</LinearLayout>