<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.cleaningmaintenanceservices.user.activity.AddressAdd">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/actAddAddressButton">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:paddingLeft="@dimen/_50sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_13sdp"
            android:text="@string/address_book"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:id="@+id/textView3" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/_7sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/arrow_back" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/back"
            android:text="@string/address"
            android:textSize="@dimen/_13sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/textView2" />

        <EditText
            android:id="@+id/actAddAddressEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:hint="@string/enter_address"
            android:textSize="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/outline_gray" />


        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/actAddAddressEditText"/>

    </RelativeLayout>





    <Button
        android:id="@+id/actAddAddressButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/button"
        android:layout_alignParentBottom="true"
        android:text="@string/add_address"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"/>
</RelativeLayout>
