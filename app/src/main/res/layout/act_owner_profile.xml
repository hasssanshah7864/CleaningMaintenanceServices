<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.cleaningmaintenanceservices.owner.activity.OwnerProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:paddingLeft="@dimen/_50sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_13sdp"
            android:text="@string/company_name"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/arrow_back" />
    </RelativeLayout>


   <android.support.v7.widget.CardView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_marginTop="@dimen/_10sdp">
       <ImageView
           android:id="@+id/actOwnerProfileImage"
           android:layout_width="@dimen/_80sdp"
           android:layout_height="@dimen/_80sdp"
           android:background="@color/colorPrimary"/>
   </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/actOwnerProfileText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/company_name"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"/>

    <TextView
        android:id="@+id/actOwnerEmailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textAlignment="center"
        android:textSize="@dimen/_11sdp"/>


    <RelativeLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">
        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_profile_green_filled"
            android:id="@+id/profileIcon" />


        <TextView
            android:id="@+id/actOwnerProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/profileIcon"
            android:text="@string/name"
            android:textSize="@dimen/_13sdp" />

        <ImageButton
            android:id="@+id/actOwnerProfileNameEdit"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_edit_gray"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#e7e7e7"
        android:layout_marginTop="@dimen/_10sdp"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_contact_green"
            android:id="@+id/phoneIcon" />


        <TextView
            android:id="@+id/actOwnerProfilePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/phoneIcon"
            android:text="@string/phone"
            android:textSize="@dimen/_13sdp" />

        <ImageButton
            android:id="@+id/actOwnerProfilePhoneEdit"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/ic_edit_gray"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#e7e7e7"
        android:layout_marginTop="@dimen/_10sdp"/>


    <RelativeLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_mail_green"
            android:id="@+id/mailIcon" />


        <TextView
            android:id="@+id/actOwnerProfileMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/mailIcon"
            android:text="@string/email"
            android:textSize="@dimen/_13sdp" />

        <ImageButton
            android:id="@+id/actOwnerProfileMailEdit"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_edit_gray"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#e7e7e7"
        android:layout_marginTop="@dimen/_10sdp"/>


    <RelativeLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_gender_circle"
            android:id="@+id/genderIcon" />


        <TextView
            android:id="@+id/actOwnerProfileGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/genderIcon"
            android:text="@string/gender"
            android:textSize="@dimen/_13sdp" />

        <ImageButton
            android:id="@+id/actOwnerProfileGenderEdit"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/ic_edit_gray"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#e7e7e7"
        android:layout_marginTop="@dimen/_10sdp"/>


    <RelativeLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_gender_circle"
            android:id="@+id/passwordIcon" />


        <TextView
            android:id="@+id/actOwnerProfilePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/passwordIcon"
            android:text="@string/change_password"
            android:textSize="@dimen/_13sdp" />

        <ImageButton
            android:id="@+id/actOwnerProfilePasswordEdit"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/ic_edit_gray"/>
    </RelativeLayout>
</LinearLayout>
